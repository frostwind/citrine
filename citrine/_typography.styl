html
  font-size 100%
  -webkit-tap-highlight-color rgba(0,0,0,0)
  -webkit-tap-highlight-color transparent

body 
  font-size remify(base-font-size) 
  line-height base-line-height
  -webkit-font-smoothing antialiased

h1
  font-size remify(h1)

h2
  font-size remify(h2)

h3
  font-size remify(h3)

h4
  font-size remify(h4)

h5
  font-size remify(h5)

h6
  font-size remify(h6)

p
  font-size remify(h5)

p, h1, h2, h3, h4, h5, h6
  margin 0 0 rhythm(1, h5)

ol, ul, dl
  margin 0 0 rhythm(1, h5)

ul ul, ol ol, dl dt, dl dd
  margin 0 0 0 rhythm(1, h5)

img
  margin 0
  max-width 100%

strong
  font-weight bold

small
  font-size remify(h6)
